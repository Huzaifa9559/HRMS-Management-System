{
  "name": "backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "nodemon index.js",
    "dev": "nodemon index.js",
    "test": "mocha --timeout 10000 --exit",
    "test:unit": "mocha 'tests/unit/**/*.test.js' --timeout 10000 --exit --reporter spec",
    "test:integration": "mocha 'tests/integration/**/*.test.js' --timeout 30000 --exit --reporter spec",
    "test:coverage": "nyc mocha 'tests/**/*.test.js' --timeout 10000 --exit",
    "test:watch": "mocha 'tests/**/*.test.js' --watch --timeout 10000",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:logs": "docker-compose -f docker-compose.test.yml logs -f",
    "test:db:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "test:with-db": "npm run test:db:up && sleep 5 && cross-env NODE_ENV=test DB_HOST=127.0.0.1 DB_USER=root DB_PASSWORD=testpassword DB_NAME=test_db DB_PORT=3307 DB_DIALECT=mysql npm run migrate && npm test && npm run test:db:down",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "lint:format": "prettier --check '**/*.js'",
    "prod": "node index.js",
    "migrate": "sequelize-cli db:migrate",
    "migrate:undo": "sequelize-cli db:migrate:undo",
    "migrate:undo:all": "sequelize-cli db:migrate:undo:all",
    "migrate:status": "sequelize-cli db:migrate:status",
    "migrate:safe": "node scripts/safe-migrate.js",
    "migrate:prod": "bash scripts/run-production-migration.sh",
    "build": "node --check index.js && echo 'Build completed successfully'",
    "prebuild": "echo 'Running pre-build checks...'",
    "postbuild": "echo 'Build process completed'",
    "deploy": "npm run build && npm run prod"
  },
  "keywords": [],
  "author": "",
  "type": "commonjs",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@sendgrid/mail": "^8.1.6",
    "aws-sdk": "^2.1691.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "form-data": "^4.0.1",
    "jsonwebtoken": "^9.0.2",
    "mailgun.js": "^10.2.4",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "mysql2": "^3.15.3",
    "nodemailer": "^7.0.10",
    "oracledb": "^6.6.0",
    "sequelize": "^6.37.5",
    "sequelize-cli": "^6.6.2"
  },
  "devDependencies": {
    "chai": "^4.3.10",
    "chai-http": "^4.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.1.4",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "sinon": "^17.0.1"
  }
}
